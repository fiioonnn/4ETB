{
	"manifest_version": 2,
	"name": "4ETB",
	"version": "1.0.0",
	"description": "4ETB - Toolbox to find and fix stupid errors on a website.",
	"author": "fiioonnn",
	"homepage_url": "https://github.com/fiioonnn/4ETB/",
	"icons": {
		"48": "icons/48.png",
		"96": "icons/128.png"
	},
	"browser_action": {
		"default_icon": "icons/48.png",
		"default_title": "4ETB - Toolbox",
		"default_popup": "popup/popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": [
				"4ETB.js",
				"tools.js",
				"content_scripts/notifications.js",
				"content_scripts/utils.js"
			]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "4ETB@fionnsworld.com",
			"strict_min_version": "1.0"
		}
	},

	"permissions": ["activeTab", "<all_urls>", "devtools", "storage"],
	"web_accessible_resources": ["icons/4ETB.svg"]
}
